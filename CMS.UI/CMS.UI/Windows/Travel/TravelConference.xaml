            <Label Margin="0,0,0,0" Height="25"/>
            <Label Content="Airport Road Time:" Margin="0,0,0,0" Height="25"/>
            <Label Margin="0,0,0,0" Height="25"/>
            <Label Content="Railway Road:" Margin="0,0,0,0" Height="25"/>
            <Label Margin="0,0,0,0" Height="25"/>
            <Label Content="Railway Road Time:" Margin="0,0,0,0" Height="25"/>
            <Label Margin="0,0,0,0" Height="25"/>
            <Label Content="Taxi Number:" Margin="0,0,0,0" Height="25"/>
            <Label Margin="0,0,0,0" Height="25"/>
        </StackPanel>
        <Button Content="Prev" HorizontalAlignment="Left" Margin="47,323,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="272,323,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.128,0.563"/>

    </Grid>
