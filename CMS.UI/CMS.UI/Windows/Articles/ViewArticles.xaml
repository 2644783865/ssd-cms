<Window x:Class="CMS.UI.Windows.Articles.ViewArticles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS.UI.Windows.Author"
        mc:Ignorable="d"
        Title="View My Articles" Height="250" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="AddArticles" Content="Add" Margin="10,105,194,86" Click="AddArticles_Click"/>
        <Button x:Name="EditArticles" Content="Edit" Margin="10,140,194,51" Click="EditArticles_Click"/>
        <Button x:Name="DeleteArticle" Content="Delete" Margin="10,175,194,16" Background="Red" Click="DeleteArticle_Click" />
        <DataGrid HorizontalAlignment="Left" Height="95" Margin="10,5,0,0" VerticalAlignment="Top" Width="267" SelectionChanged="DataGrid_SelectionChanged"/>
    </Grid>


</Window>
