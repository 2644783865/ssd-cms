<Window x:Class="CMS.UI.Windows.Articles.SubmitArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS.UI.Windows.Author"
        mc:Ignorable="d"
        Title="Submit Articles" Height="200" Width="250"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,4,0" Height="221" VerticalAlignment="Top">
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Right" Margin="0,0,10,94" VerticalAlignment="Bottom" Width="95" Click="SubmitButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,123,94" VerticalAlignment="Bottom" Width="96" Click="CancelButton_Click"/>
        <Label Content="Topic:" Margin="21,19,10,180"/>
        <TextBox x:Name="Topic" Margin="21,51,10,144" Height="23"/>
    </Grid>
</Window>
