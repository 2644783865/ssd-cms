@model CMS.BE.Models.Program.ConferenceProgramModel

@{
    ViewBag.Title = Model.Conference.Title;
}

<h2>@Model.Conference.Title</h2>
<h3>@Model.Conference.Place</h3>
<h3>@Model.Conference.Description</h3>
<h3>@Model.Conference.BeginDate.ToShortDateString() - @Model.Conference.EndDate.ToShortDateString()</h3>
<br />
<h2>Program:</h2>
<div>
    <p>Legend:</p>
    <span style="color:#0000FF">Events &nbsp;&nbsp;</span>
    <span>Sessions &nbsp;&nbsp;</span>
    <span style="font-weight: bold">Special sessions</span>
</div>
<br />
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Title </th>
        <th>Begin Date </th>
        <th>End Date</th>
    </tr>
    @foreach (var m in Model.Entries)
    {
        var color = m.GetType() == typeof(CMS.BE.DTO.EventDTO) ? "#0000FF" : "#000000";
        var weigh = m.GetType() == typeof(CMS.BE.DTO.SpecialSessionDTO) ? "bold" : "normal";
        <tr style="color:@color; font-weight: @weigh">
            <td>@m.Title</td>
            <td>@m.BeginDate</td>
            <td>@m.EndDate</td>
        </tr>
    }
</table>
<br />
<h3>Events:</h3>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Title </th>
        <th>Begin Date </th>
        <th>End Date</th>
        <th>Description</th>
        <th>Building</th>
        <th>Room</th>
    </tr>
    @foreach (var m in Model.Events)
    {
        <tr>
            <td style="max-width:170px; word-wrap: break-word">@m.Title</td>
            <td>@m.BeginDate</td>
            <td>@m.EndDate</td>
            <td style="max-width:150px; word-wrap: break-word">@m.Description</td>
            <td style="max-width:150px; word-wrap: break-word">@m.BuildingName</td>
            <td>@m.RoomCode</td>
        </tr>
    }
</table>
<br />
<h3>Sessions:</h3>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Title </th>
        <th>Begin Date </th>
        <th>End Date</th>
        <th>Description</th>
        <th>Building</th>
        <th>Room</th>
        <th>Chairman</th>
    </tr>
    @foreach (var m in Model.Sessions)
    {
        <tr>
            <td style="max-width:170px; word-wrap: break-word">@m.Title</td>
            <td>@m.BeginDate</td>
            <td>@m.EndDate</td>
            <td style="max-width:150px; word-wrap: break-word">@m.Description</td>
            <td style="max-width:150px; word-wrap: break-word">@m.BuildingName</td>
            <td>@m.RoomCode</td>
            <td>@m.AccountName</td>
        </tr>
    }
</table>
<br />
<h3>Special Sessions:</h3>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Title </th>
        <th>Begin Date </th>
        <th>End Date</th>
        <th>Description</th>
        <th>Building</th>
        <th>Room</th>
        <th>Chairman</th>
    </tr>
    @foreach (var m in Model.SpecialSessions)
    {
        <tr>
            <td style="max-width:170px; word-wrap: break-word">@m.Title</td>
            <td>@m.BeginDate</td>
            <td>@m.EndDate</td>
            <td style="max-width:150px; word-wrap: break-word">@m.Description</td>
            <td style="max-width:150px; word-wrap: break-word">@m.BuildingName</td>
            <td>@m.RoomCode</td>
            <td>@m.AccountName</td>
        </tr>
    }
</table>

